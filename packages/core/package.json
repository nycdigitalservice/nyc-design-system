{
  "name": "@nycds/core",
  "version": "0.1.0",
  "type": "module",
  "style": "./dist/nycds-core.css",
  "main": "./src/index.js",
  "license": "GPLv3",
  "scripts": {
    "dev:js": "esbuild src/index.js --bundle --outfile=dist/nycds-core.js --watch",
    "dev:css": "postcss src/index.css -o dist/nycds-core.css -w",
    "dev:css-aem": "postcss src/aem/index.css -o dist/nycds-core-aem.css -w",
    "dev": "npm-run-all --parallel dev:*",
    "build:js": "esbuild src/index.js --bundle --outfile=dist/nycds-core.js",
    "build:css": "postcss src/index.css -o dist/nycds-core.css",
    "build:css-aem": "postcss src/aem/index.css -o dist/nycds-core-aem.css",
    "build": "npm-run-all --parallel build:*"
  },
  "dependencies": {
    "@nycds/accordion": "workspace:^",
    "@nycds/alert": "workspace:^",
    "@nycds/button": "workspace:^",
    "@nycds/card": "workspace:^",
    "@nycds/composition": "workspace:^",
    "@nycds/form": "workspace:^",
    "@nycds/global": "workspace:^",
    "@nycds/icons": "workspace:^",
    "@nycds/navigation": "workspace:^",
    "@nycds/reset": "workspace:^",
    "@nycds/select": "workspace:^",
    "@nycds/tab-group": "workspace:^",
    "@nycds/themes": "workspace:^",
    "@nycds/tooltip": "workspace:^",
    "@nycds/utilities": "workspace:^",
    "@nycds/variables": "workspace:^",
    "@ungap/custom-elements": "^1.3.0"
  }  
}
